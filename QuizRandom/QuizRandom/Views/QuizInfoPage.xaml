<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QuizRandom.ViewModels"
             x:Class="QuizRandom.Views.QuizInfoPage">
    <ContentPage.BindingContext>
        <local:QuizInfoViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid Margin="{StaticResource PageMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   Text="{Binding QuizName}"
                   FontSize="Title" />
            <Label Grid.Row="1"
                   Text="{Binding QuizInfo}"
                   FontSize="Medium" />
            <Button Grid.Row="2"
                    Text="Play"
                    Command="{Binding PlayQuizCommand}" />
            <Button Grid.Row="3"
                    Text="Delete"
                    Command="{Binding DeleteQuizCommand}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>